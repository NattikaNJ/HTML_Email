doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title Uni-Chor-Marburg-Email
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    style(type='text/css').
      body {margin: 0; padding: 0; min-width: 100%!important;}
      .content {width: 100%; max-width: 600px;}
      *{font-family: "Calibri";}
  body(style='margin: 0; padding: 0;')
    // 1
    table(border='0', cellpadding='0', cellspacing='0', width='100%')
      tr
        td
          // Img
          table.content(align='center', style='border: 1px solid #cccccc;', cellpadding='0', cellspacing='0')
            tr
              td(bgcolor='#f15a22', style='padding: 20px 0 20px 0;', align='center')
                table(align='center', border='0', cellpadding='0', cellspacing='0', width='70%', style='border-collapse: collapse;')
                  tr
                    td(width='40%')
                      img(src='https://i.imgur.com/7j9ZIkn.jpg', width='30%', style='display: block;')
                    td(width='60%')
                      img(src='http://i.imgur.com/MQooUEV.gif', width='100%', style='display: block;')
            // Title
            tr
              td(style='padding: 10px 20px 20px 20px;')
                table(align='center', border='0', cellpadding='0', cellspacing='0', width='100%', style='border-collapse: collapse;')
                  tr
                    td

                      h2 #{title}
                  tr
                    td
                      div(style='text-align:justify; font-size:16px') #{main}
                  tr
                    td(style='padding: 20px 0px 0px 0px;')
                      table(align='center', border='0', cellpadding='0', cellspacing='0', width='100%', style='border-collapse: collapse;')
                        tr
                          td(width='50%', style='padding: 5px 10px 5px 5px;')
                            img(src='https://i.imgur.com/IiBUBJR.jpg', style='margin-bottom: 15px;', width='100%')
                            div(style='text-align:justify; font-size:16px') #{left}
                          td(width='50%', style='padding: 5px 5px 5px 10px;')
                            img(src='https://i.imgur.com/IiBUBJR.jpg', style='margin-bottom: 15px;', width='100%')
                            div(style='text-align:justify; font-size:16px') #{right}
            tr
              td(bgcolor='#333333', style='padding: 10px 10px 10px 10px;')
                table(align='center', border='0', cellpadding='0', cellspacing='0', width='100%', style='border-collapse: collapse;')
                  tr
                    td
                      div(style='font-size: 12px; text-align:center; color: white')
                        b Philipps-Universität Marburg
                        div
                          | Biegenstraße 10, 35032 Marburg
                  tr
                    td(align='center', style='padding: 20px 0 0 0;')
                      table(border='0', cellpadding='0', cellspacing='0')
                        tr
                          td
                            a(href='https://twitter.com/uni_mr')
                              img(src='https://i.imgur.com/6bi8vEC.jpg', alt='Twitter', width='20', height='20', style='display: block;', border='0')
                          td(style='font-size: 0; line-height: 0;', width='10px')  
                          td
                            a(href='https://www.facebook.com/PhilippsUniversitaet')
                              img(src='https://i.imgur.com/ttaYSV0.jpg', alt='Facebook', width='20', height='20', style='display: block;', border='0')
                          td(style='font-size: 0; line-height: 0;', width='10px')  
                          td
                            a(href='https://www.youtube.com/channel/UCCYYr5nvvA18hI-hpPhQtDA')
                              img(src='https://i.imgur.com/4JteOCx.jpg', alt='Youtube', width='20', height='20', style='display: block;', border='0')
